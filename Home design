<body>

<div class="catalog-container">
  <div class="arrow arrow-left" onclick="prevPage()">&#10094;</div>
  <div class="arrow arrow-right" onclick="nextPage()">&#10095;</div>

  <div class="page active" id="page0">صفحة الغلاف</div>
  <div class="page" id="page1">صفحة المقدمة</div>
  <div class="page" id="page2">صفحة المخطط العام</div>
  <!-- يمكنك إضافة المزيد من الصفحات هنا -->
</div>

<script>
  let currentPage = 0;
  const pages = document.querySelectorAll('.page');

  function showPage(index) {
    pages.forEach((page, i) => {
      page.classList.toggle('active', i === index);
    });
  }

  function nextPage() {
    currentPage = (currentPage + 1) % pages.length;
    showPage(currentPage);
  }

  function prevPage() {
    currentPage = (currentPage - 1 + pages.length) % pages.length;
    showPage(currentPage);
  }
</script>

</body>
</html>
